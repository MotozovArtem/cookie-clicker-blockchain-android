<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="ru.rienel.clicker">

	<application
			android:allowBackup="true"
			android:icon="@mipmap/ic_launcher"
			android:label="@string/app_name"
			android:roundIcon="@drawable/donut_icon"
			android:supportsRtl="true"
			android:theme="@style/AppTheme">
		<activity
				android:name="ru.rienel.clicker.MainActivity"
				android:label="@string/newGame">

		</activity>
		<activity
				android:name="ru.rienel.clicker.ShopActivity"
				android:label="@string/shopTitle">
		</activity>
		<activity
				android:name="ru.rienel.clicker.StartGameActivity"
				android:label="@string/gameTitle">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
				android:name="ru.rienel.clicker.StatisticsActivity"
				android:label="@string/statistic">
		</activity>
	</application>

</manifest>