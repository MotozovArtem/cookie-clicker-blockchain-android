<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="ru.rienel.clicker">

	<uses-permission
			android:name="android.permission.ACCESS_COARSE_LOCATION"
			android:required="true"/>
	<uses-permission
			android:name="android.permission.ACCESS_WIFI_STATE"
			android:required="true"/>
	<uses-permission
			android:name="android.permission.INTERNET"
			android:required="true"/>
	<uses-permission
			android:name="android.permission.CHANGE_WIFI_STATE"
			android:required="true"/>

	<application
			android:allowBackup="true"
			android:icon="@mipmap/ic_launcher"
			android:label="@string/app_name"
			android:roundIcon="@drawable/donut_icon"
			android:supportsRtl="true"
			android:theme="@style/AppTheme">
		<service android:name="service.NetworkService"/>
		<activity
				android:name=".activity.GameActivity"
				android:label="@string/newGame">
		</activity>
		<activity
				android:name=".activity.ShopActivity"
				android:label="@string/shopTitle">
		</activity>
		<activity
				android:name=".activity.MainActivity"
				android:label="@string/gameTitle">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
				android:name=".activity.StatisticsActivity"
				android:label="@string/statistic">
		</activity>
		<activity android:name=".activity.NetworkActivity">
		</activity>
		<activity android:name=".activity.preference.PreferencesActivity"/>
	</application>

</manifest>