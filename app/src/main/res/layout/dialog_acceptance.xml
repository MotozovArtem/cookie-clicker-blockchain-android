<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
	<TextView
			android:id="@+id/dialog_acceptance_message"
			android:text="@string/dialog_acceptance_message"
			android:layout_centerHorizontal="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	<TextView
			android:id="@+id/dialog_opponent_name"
			android:layout_below="@id/dialog_acceptance_message"
			android:layout_centerHorizontal="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	<TextView
			android:text="@string/question_mark"
			android:layout_toEndOf="@id/dialog_opponent_name"
			android:layout_below="@id/dialog_acceptance_message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	<TextView
			android:id="@+id/dialog_acceptance_remaining_time"
			android:layout_below="@id/dialog_opponent_name"
			android:layout_centerHorizontal="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
</RelativeLayout>